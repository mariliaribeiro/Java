public class Main {

	public static void main(String[] args) {
				
		// Clientes
		/*Cliente cli1 = new Cliente("Marilia", "45684204958");
		Cliente cli2 = new Cliente("Nicole", "14535687937");
		Cliente cli3 = new Cliente("Vanessa", "23451098236");
		Cliente cli4 = new Cliente("Giorgy", "85923470134");
		Cliente cli5 = new Cliente("Iago", "75976134756");*/
		
		Cliente cli1 = new Cliente("Joice", "234.333.345-54");
		Cliente cli2 = new Cliente("João", "345.432.564-67");
		Cliente cli3 = new Cliente("Ivo", "355.422.555-78");
		Cliente cli4 = new Cliente("Ana", "444.455.355-98");
		Cliente cli5 = new Cliente("Carlos", "342.467.598-98");
		
		// Conta Corrente
		CCorrente cc1 = new CCorrente(1234, 400.00, cli1);
		CCorrente cc2 = new CCorrente(4534, 400.00, cli2);
		
		// Conta Poupança
		CPoupanca cp1 = new CPoupanca(3567, 800.00, cli2, 800.00);
		
		// Conta Especial
		CEspecial ce1 = new CEspecial(7654, 1020.00, cli3, 500.00);
		
		// Conta Investimento
		CInvestimento ci1 = new CInvestimento(865, 630.00, cli3, 15, 30);
		CInvestimento ci2 = new CInvestimento(75, 900.00, cli4, 10, 30);
		
		System.out.println(cc1 
				  + "\n" + cc2
				  + "\n" + cp1
				  + "\n" + ce1
				  + "\n" + ci1
				  + "\n" + ci2);
		
		System.out.println("\n\nReajuste:");
		
		cp1.reajustar(10);	
		ci1.reajustar(5);
		ci2.reajustar(5);
	}

}
